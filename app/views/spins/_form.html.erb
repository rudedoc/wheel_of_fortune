<%= form_for @spin, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :off_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :off_time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :result_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :result_time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :result, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :result, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :session_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :session_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                spins_path, :class => 'btn' %>
  </div>
<% end %>
